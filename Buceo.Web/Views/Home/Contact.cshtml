@model Buceo.Web.Models.MensajeEmailModel

<div id="contact" class="contact">
    <div class="section secondary-section">
        <div class="container">
            <div class="title">
                <h1>Contactanos</h1>
                <p>Utilice este formulario para enviar su solicitud o duda:</p>
            </div>
        </div>
        <div class="map-wrapper">
            <div class="map-canvas" id="map-canvas">Cargando mapa...</div>
            <div class="container">
                <div class="row-fluid">
                    <div class="span5 contact-form centered">
                        <h3></h3>
                        <div id="successSend" class="alert alert-success invisible">
                            <strong>Well done!</strong>Tu mensaje ha sido enviado.
                        </div>
                        <div id="errorSend" class="alert alert-error invisible">Ha ocurrido un error.</div>
                        @using (Html.BeginForm("EnviarEmail", "Home", new {area = "Administracion"}, FormMethod.Post, new {id = "frmEnviarEmail"}))
                        {
                            <div class="control-group">
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Nombre, new { @class = "span12", @placeholder = "* Su nombre..." })
                                    @Html.ValidationMessageFor(m => Model.Nombre, "error left-align")
                                    @*<div class="error left-align" id="err-Nombre">Por favor ingrese su nombre.</div>*@
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "span12", @placeholder = "* Su email...", @type = "email" })
                                    @Html.ValidationMessageFor(m => Model.Email, "error left-align")
                                    @*<div class="error left-align" id="err-Email">Por favor ingresa una dirección de correo válida.</div>*@
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    @Html.TextAreaFor(model => model.Mensaje, new { @class = "span12", @placeholder = "* Mensaje..." })
                                    @Html.ValidationMessageFor(m => Model.Mensaje, "error left-align")
                                    @*<div class="error left-align" id="err-Mensaje">Por favor ingrese su mensaje.</div>*@
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <button id="btnEnviarEmail" class="message-btn">Enviar Mensaje</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="span9 center contact-info">
                <p>Calle Colon 878 - Callao</p>
                <p class="info-mail">wraver_1104@hotmail.com</p>
                <p>985025076</p>
                <p>998238186</p>
            </div>
            <div class="row-fluid centered">
                <ul class="social">
                    <li>
                        <a href="">
                            <span class="icon-facebook-circled"></span>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <span class="icon-twitter-circled"></span>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <span class="icon-linkedin-circled"></span>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <span class="icon-pinterest-circled"></span>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <span class="icon-dribbble-circled"></span>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <span class="icon-gplus-circled"></span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>